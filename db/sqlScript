create table CUSTOMER
(
    ID                  BIGINT UNSIGNED NOT NULL AUTO_INCREMENT,
    FIRST_NAME          VARCHAR(255)    NOT NULL,
    LAST_NAME           VARCHAR(255)    NOT NULL,
    PERSONAL_ID_NUMBER  VARCHAR(25)     NOT NULL,
    CITY                VARCHAR(255)    NOT NULL,
    POSTAL_CODE         VARCHAR(255)    NOT NULL,
    STREET              VARCHAR(255)    NOT NULL,
    COMPANY_NAME        VARCHAR(255),
    TAX_ID_NUMBER       VARCHAR(25),
    COMPANY_CITY        VARCHAR(255),
    COMPANY_POSTAL_CODE VARCHAR(255),
    COMPANY_STREET      VARCHAR(255),
    REMOVE_DATETIME     DATETIME,
    PRIMARY KEY (ID)
);

create table VEHICLE
(
    ID                        BIGINT UNSIGNED NOT NULL AUTO_INCREMENT,
    REGISTRATION_NUMBER       VARCHAR(25)     NOT NULL,
    BRAND                     VARCHAR(255)    NOT NULL,
    MODEL                     VARCHAR(255)    NOT NULL,
    VIN_NUMBER                VARCHAR(25)     NOT NULL,
    CURRENT_RENTAL_RATE_NETT  DECIMAL(19, 4)  NOT NULL,
    CURRENT_RENTAL_RATE_GROSS DECIMAL(19, 4)  NOT NULL,
    TAX_PERCENT               DECIMAL(19, 4)  NOT NULL,
    REMOVE_DATETIME           DATETIME,
    PRIMARY KEY (ID)
);

create table VEHICLE_RATE_STATS
(
    ID                              BIGINT UNSIGNED NOT NULL AUTO_INCREMENT,
    VEHICLE_ID                      BIGINT UNSIGNED NOT NULL,
    RENTAL_RATE_NETT_BEFORE_CHANGE  DECIMAL(19, 4)  NOT NULL,
    RENTAL_RATE_GROSS_BEFORE_CHANGE DECIMAL(19, 4)  NOT NULL,
    TAX_PERCENT                     DECIMAL(19, 4)  NOT NULL,
    PRIMARY KEY (ID),
    FOREIGN KEY (VEHICLE_ID) REFERENCES VEHICLE (ID)
);

create table EMPLOYEE
(
    ID                 BIGINT UNSIGNED NOT NULL AUTO_INCREMENT,
    FIRST_NAME         VARCHAR(255)    NOT NULL,
    LAST_NAME          VARCHAR(255)    NOT NULL,
    PERSONAL_ID_NUMBER VARCHAR(25)     NOT NULL,
    CITY               VARCHAR(255)    NOT NULL,
    POSTAL_CODE        VARCHAR(255)    NOT NULL,
    STREET             VARCHAR(255)    NOT NULL,
    REMOVE_FLAG        DATETIME,
    PRIMARY KEY (ID)
);

create table RENTAL_DETAILS
(
    ID                           BIGINT UNSIGNED NOT NULL AUTO_INCREMENT,
    VEHICLE_ID                   BIGINT UNSIGNED NOT NULL,
    CUSTOMER_ID                  BIGINT UNSIGNED NOT NULL,
    EMPLOYEE_ID                  BIGINT UNSIGNED NOT NULL,
    PICK_UP                      DATETIME        NOT NULL,
    DROP_OFF                     DATETIME        NOT NULL,
    TOTAL_RENTAL_RATE_NETT       DECIMAL(19, 4)  NOT NULL,
    TOTAL_RENTAL_RATE_GROSS      DECIMAL(19, 4)  NOT NULL,
    TOTAL_RENTAL_RATE_VAT        DECIMAL(19, 4)  NOT NULL,
    CUSTOMER_CITY                VARCHAR(255)    NOT NULL,
    CUSTOMER_POSTAL_CODE         VARCHAR(255)    NOT NULL,
    CUSTOMER_STREET              VARCHAR(255)    NOT NULL,
    CUSTOMER_COMPANY_NAME        VARCHAR(255),
    CUSTOMER_TAX_ID_NUMBER       VARCHAR(25),
    CUSTOMER_COMPANY_CITY        VARCHAR(255),
    CUSTOMER_COMPANY_POSTAL_CODE VARCHAR(255),
    CUSTOMER_COMPANY_STREET      VARCHAR(255),
    CREATE_DATETIME              DATETIME,
    PRIMARY KEY (ID),
    FOREIGN KEY (VEHICLE_ID) REFERENCES VEHICLE (ID),
    FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMER (ID),
    FOREIGN KEY (EMPLOYEE_ID) REFERENCES EMPLOYEE (ID)
);